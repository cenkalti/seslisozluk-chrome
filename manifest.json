{
   "manifest_version": 2,

   "name": "SesliSozluk",
   "description": "Sayfada secili yaziyi diger dillere cevirir.",
   "version": "1.2.3",
   
   "permissions": [ "tabs", "http://*.seslisozluk.com/" ],
   "browser_action": {
      "default_icon": "icon19.png",
      "default_popup": "popup.html"
   },
   "background": {
      "scripts": ["background.js"]
   },
   "content_scripts": [ {
      "js": [ "jquery.js", "tooltip.js", "content_script.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
   } ],
   "icons": {
      "128": "icon128.png",
      "48": "icon48.png"
   },
   "options_page": "options.html"
}
